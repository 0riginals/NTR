<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="com.banque.classes.User" table="users">
	<id name="id" type="int" column="id_user"></id>
	<property name="firstName" type="string" column="first_name" not-null="false"></property>
	<property name="lastName" type="string" column="last_name" not-null="false"></property>
	<property name="balance" type="double" not-null="false"></property>
	</class>
</hibernate-mapping>